<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="@string/common_symptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <TextView
                    android:text="@string/fever"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <TextView
                    android:text="@string/headache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <TextView
                    android:text="@string/period_issue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <TextView
                    android:text="@string/acne_pimples"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <TextView
                    android:text="@string/stress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <TextView
                    android:text="@string/fever"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <TextView
                    android:text="@string/weight_loss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_columnWeight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <TextView
                    android:text="@string/back_pain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
            </LinearLayout>

        </GridLayout>

        <TextView
            android:text="@string/specialities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="3"/>

        <TextView
            android:text="@string/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>