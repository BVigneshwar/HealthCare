<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_above="@id/button_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/name"
                style="@style/FormLabel"/>
            <EditText
                android:id="@+id/name_editText"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/EditText"/>

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                style="@style/FormLabel"/>
            <EditText
                android:id="@+id/contact_editText"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                style="@style/EditText"/>

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/email"
                style="@style/FormLabel"/>
            <EditText
                android:id="@+id/email_editText"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/EditText"/>

            <TextView
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dob"
                style="@style/FormLabel"/>
            <RelativeLayout
                android:id="@+id/dob_datePicker"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/PaddingTopBottom">
                <TextView
                    android:id="@+id/dob_icon"
                    android:background="@drawable/calendar_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/dob_textView"
                    android:layout_toRightOf="@id/dob_icon"
                    android:text="--/--/----"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FormLabel"/>
            </RelativeLayout>

            <TextView
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                style="@style/FormLabel"/>
            <RadioGroup
                android:id="@+id/gender_radioGroup"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_width="0dp"
                android:orientation="horizontal"
                style="@style/RadioGroup">
                <RadioButton
                    android:id="@+id/male_radioButton"
                    android:text="@string/male"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    style="@style/RadioButton"/>
                <RadioButton
                    android:id="@+id/female_radioButton"
                    android:text="@string/female"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    style="@style/RadioButton"/>
            </RadioGroup>

            <TextView
                android:layout_row="5"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/password"
                style="@style/FormLabel"/>
            <EditText
                android:id="@+id/password_editText"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                style="@style/EditText"/>

            <EditText
                android:id="@+id/re_password_editText"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                style="@style/EditText"/>

            <TextView
                android:layout_row="7"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/address"
                style="@style/FormLabel"/>
            <EditText
                android:id="@+id/address_editText"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/EditText"/>

            <TextView
                android:layout_row="8"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/city"
                style="@style/FormLabel"/>
            <EditText
                android:id="@+id/city_editText"
                android:layout_row="8"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/EditText"/>

            <TextView
                android:layout_row="9"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/country"
                style="@style/FormLabel"/>
            <EditText
                android:id="@+id/country_editText"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/EditText"/>

        </GridLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/cancel_button"
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/cancel_button"
            style="@style/CancelButton"/>

        <Button
            android:id="@+id/signup_button"
            android:text="@string/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/normal_button"
            style="@style/NormalButton"/>

    </LinearLayout>
</RelativeLayout>